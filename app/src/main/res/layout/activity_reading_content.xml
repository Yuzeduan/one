<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/reading_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:textSize="25sp"
                android:textColor="#000000"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/reading_tv_author"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/reading_tv_date"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/reading_tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="-评论列表-"
                android:textColor="#000"
                android:textSize="20sp"/>

            <com.yuzeduan.ui.CommentListView
                android:id="@+id/reading_lv_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="#33000000"
                android:dividerHeight="0.1dp">
            </com.yuzeduan.ui.CommentListView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>